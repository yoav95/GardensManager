rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /gardens/{gardenId}/{allPaths=**} {
      // Allow authenticated users to upload to their own garden's folder
      allow write: if request.auth != null;
      
      // Allow authenticated users to read all garden images
      allow read: if request.auth != null;
    }
  }
}
