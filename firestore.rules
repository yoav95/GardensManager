rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Pending users - allow anyone to create their registration request
    match /pendingUsers/{userId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read, update: if request.auth != null;
    }

    // Workspace join requests - authenticated users can create and read their own
    match /workspaceJoinRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Workspaces collection - authenticated users can read all workspaces
    match /workspaces/{workspaceId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }

    // Gardens - authenticated users can read/write any garden
    // Workspace filtering is enforced client-side
    match /gardens/{gardenId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Tasks - authenticated users can read/write any task
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Shopping - authenticated users can read/write any item
    match /shopping/{itemId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Weeks - authenticated users can create and read/write their own weeks
    match /weeks/{weekId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
